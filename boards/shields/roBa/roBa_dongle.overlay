/ {
    chosen {
        zmk,kscan = &mock_kscan;
        zmk,matrix_transform = &default_transform;
        zephyr,display = &oled;
    };

    /* ▼▼▼ ここに roBa.dtsi からコピーした内容を貼り付けます ▼▼▼ */
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <...>;
        rows = <...>;
        map = <
            ... (長いデータ) ...
        >;
    };
    /* ▲▲▲ 貼り付けここまで ▲▲▲ */

    mock_kscan: kscan_0 {
        compatible = "zmk,kscan-mock";
        columns = <1>; // ここはそのままでOK
        rows = <1>;    // ここはそのままでOK
        events = <0>;
    };

    trackball: virtual_input {
        compatible = "zmk,virtual-input";
        status = "disabled";
    };
};

&pro_micro_i2c {
    /* ... OLEDの設定 ... */
    status = "okay";
    oled: ssd1306@3c {
        /* ... 省略 ... */
    };
};
